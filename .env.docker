# Docker Environment Configuration
# Copy this to .env when deploying with Docker Compose

APP_NAME="Asset Inventory"
APP_ENV=production
APP_DEBUG=false
APP_URL=http://localhost
APP_KEY=

# Database Configuration
DB_CONNECTION=mysql
DB_HOST=mysql
DB_PORT=3306
DB_DATABASE=asset_inventory
DB_USERNAME=laravel
DB_PASSWORD=laravel_password

# MySQL Root Password
MYSQL_ROOT_PASSWORD=root_password

# Redis Configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=null
REDIS_CLIENT=phpredis

# Cache & Session
CACHE_STORE=redis
SESSION_DRIVER=redis
SESSION_LIFETIME=120

# Queue
QUEUE_CONNECTION=database

# Application Settings
APP_LOCALE=en
APP_FALLBACK_LOCALE=en
BCRYPT_ROUNDS=12

# Logging
LOG_CHANNEL=stack
LOG_LEVEL=debug

# Mail Configuration
MAIL_MAILER=log

# Filesystem
FILESYSTEM_DISK=local
